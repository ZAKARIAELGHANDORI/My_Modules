                <xpath expr="//field[@name='message_needaction']" position="after">

                        <button name="%(action_create_instance_order)d" string="Create Instances" type="action"/>



                </xpath>
            </field>
        </record> -->

        <record model="ir.ui.view" id="create_instance_order_form_view">
            <field name="name">Create instance form</field>
            <field name="model">kzm.instance.request</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <group>
                            <field name="cpu"/>
                            <field name="ram"/>
                            <field name="disk"/>
                        </group>
                        <group>
                            <field name="tl_id"/>
                        </group>

                    </group>
                </form>
            </field>
        </record>


        <record id="action_create_order_instance" model="ir.actions.act_window">
            <field name="name">Create Instance</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sale.order</field>
            <field name="view_mode">form</field>
        </record>


    </data>
</odoo>