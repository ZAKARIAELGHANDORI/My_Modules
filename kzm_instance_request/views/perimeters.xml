<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>


    <record model="ir.ui.view" id="perimeters_list_view">
      <field name="name">Perimeters List</field>
      <field name="model">perimeters</field>
      <field name="arch" type="xml">

        <tree>
            <field name="name" />
        </tree>
      </field>
    </record>



      <record model="ir.ui.view" id="perimeters_form_view">
        <field name="name">Perimeters Formulaire</field>
        <field name="model">perimeters</field>
        <field name="arch" type="xml">

        <form>
            <sheet>
            <group>
               <field name="name" />
            </group>
            </sheet>
        </form>
      </field>
    </record>



   <record id="Perimeters_view_search" model="ir.ui.view">
      <field name="name">Filtrage des Perimeters </field>
      <field name="model">perimeters</field>
      <field name="arch" type="xml">

        <search>
          <field name="name" />
        </search>

    </field>
   </record>



      <record id="perimeters_action_window" model="ir.actions.act_window" >
          <field name="name">Perimeters</field>
          <field name="res_model">perimeters</field>
          <field name="type">ir.actions.act_window</field>
          <field name="view_mode">tree,form</field>
      </record>


  </data>
</odoo>